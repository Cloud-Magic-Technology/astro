---
interface Props {
	title?: string;
	lang?: string;
}

const { title, lang = 'typescript' } = Astro.props;
---

<div class="overflow-hidden rounded-lg border border-slate-700 bg-slate-800">
	{title && (
		<div class="flex items-center justify-between border-b border-slate-700 bg-slate-900 px-4 py-2">
			<span class="text-sm font-medium text-slate-400">{title}</span>
			<span class="rounded bg-slate-700 px-2 py-0.5 text-xs text-slate-400">{lang}</span>
		</div>
	)}
	<pre class="overflow-x-auto p-4 text-sm"><code class={`language-${lang}`}><slot /></code></pre>
</div>

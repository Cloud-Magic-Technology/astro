---
interface Props {
	type?: 'info' | 'warning' | 'success' | 'tip';
	title?: string;
}

const { type = 'info', title } = Astro.props;

const styles = {
	info: 'border-blue-500 bg-blue-500/10 text-blue-200',
	warning: 'border-amber-500 bg-amber-500/10 text-amber-200',
	success: 'border-green-500 bg-green-500/10 text-green-200',
	tip: 'border-purple-500 bg-purple-500/10 text-purple-200',
};

const icons = {
	info: 'i',
	warning: '!',
	success: '✓',
	tip: '★',
};
---

<div class={`rounded-lg border-l-4 p-4 ${styles[type]}`}>
	<div class="flex items-start gap-3">
		<span class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-current/20 text-sm font-bold">
			{icons[type]}
		</span>
		<div>
			{title && <h4 class="mb-1 font-semibold">{title}</h4>}
			<div class="text-sm opacity-90">
				<slot />
			</div>
		</div>
	</div>
</div>

---
interface Props {
	lines?: number;
	showAvatar?: boolean;
}

const { lines = 3, showAvatar = false } = Astro.props;
---

<div class="animate-pulse">
	{showAvatar && (
		<div class="mb-3 flex items-center gap-3">
			<div class="h-10 w-10 rounded-full bg-slate-700"></div>
			<div class="space-y-2">
				<div class="h-4 w-24 rounded bg-slate-700"></div>
				<div class="h-3 w-16 rounded bg-slate-700"></div>
			</div>
		</div>
	)}
	<div class="space-y-2">
		{Array.from({ length: lines }).map((_, i) => (
			<div
				class="h-4 rounded bg-slate-700"
				style={`width: ${85 - i * 15}%`}
			></div>
		))}
	</div>
</div>

<style>
	@keyframes pulse {
		0%, 100% {
			opacity: 1;
		}
		50% {
			opacity: 0.5;
		}
	}
	.animate-pulse {
		animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
	}
</style>

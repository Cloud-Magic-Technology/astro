const vitals = [
	{
		name: 'LCP',
		fullName: 'Largest Contentful Paint',
		description: 'Measures loading performance. Should occur within 2.5 seconds.',
		good: '‚â§ 2.5s',
		poor: '> 4.0s',
		icon: 'üñºÔ∏è',
		color: 'green',
	},
	{
		name: 'INP',
		fullName: 'Interaction to Next Paint',
		description: 'Measures interactivity. Should be less than 200 milliseconds.',
		good: '‚â§ 200ms',
		poor: '> 500ms',

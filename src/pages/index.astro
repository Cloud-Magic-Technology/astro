---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const recentPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()).slice(0, 3);

const showcasePages = [
	{ href: '/evolution', title: 'Evolution', desc: 'Journey through web development eras', icon: 'ğŸ•°ï¸', color: 'from-purple-500 to-cyan-500' },
	{ href: '/playground', title: 'Playground', desc: 'Interactive hydration demos', icon: 'ğŸ®', color: 'from-amber-500 to-orange-500' },
	{ href: '/state-sharing', title: 'State Sharing', desc: 'React + Vue + Svelte together', icon: 'ğŸ”—', color: 'from-blue-500 to-green-500' },
	{ href: '/transitions', title: 'Transitions', desc: 'View Transitions API showcase', icon: 'âœ¨', color: 'from-purple-500 to-pink-500' },
	{ href: '/server-islands', title: 'Server Islands', desc: 'Dynamic + static mixing', icon: 'ğŸï¸', color: 'from-cyan-500 to-blue-500' },
	{ href: '/api-demo', title: 'API Demo', desc: 'Server endpoints in action', icon: 'ğŸ”Œ', color: 'from-green-500 to-emerald-500' },
	{ href: '/content-power', title: 'Content Power', desc: 'MDX & Collections', icon: 'ğŸ“', color: 'from-pink-500 to-rose-500' },
	{ href: '/performance', title: 'Performance', desc: 'Metrics that matter', icon: 'ğŸš€', color: 'from-green-500 to-cyan-500' },
];
---

<Layout title="Astro Lab | Power & Evolution Showcase">
	<section class="mb-16 text-center">
		<h1 class="mb-6 bg-gradient-to-r from-purple-400 via-pink-500 to-cyan-400 bg-clip-text text-5xl font-bold text-transparent md:text-6xl">
			Astro Lab
		</h1>
		<p class="mx-auto mb-8 max-w-2xl text-xl text-slate-300">
			An immersive showcase demonstrating Astro's revolutionary approach to web development.
			Experience the power of Islands Architecture, multi-framework support, and zero-JS-by-default.
		</p>
		<div class="flex flex-wrap justify-center gap-4">
			<a href="/evolution" class="rounded-lg bg-purple-600 px-6 py-3 font-medium text-white transition-colors hover:bg-purple-700">
				Start the Journey
			</a>
			<a href="/playground" class="rounded-lg border border-purple-500 px-6 py-3 font-medium text-purple-400 transition-colors hover:bg-purple-500/20">
				Try the Playground
			</a>
		</div>
	</section>

	<section class="mb-16">
		<h2 class="mb-8 text-center text-2xl font-bold text-white">Explore the Showcase</h2>
		<div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
			{showcasePages.map((page) => (
				<a
					href={page.href}
					class="group relative overflow-hidden rounded-xl border border-slate-700 bg-slate-800 p-5 transition-all hover:border-purple-500/50 hover:shadow-lg hover:shadow-purple-500/10"
				>
					<div class={`absolute inset-0 bg-gradient-to-br ${page.color} opacity-0 transition-opacity group-hover:opacity-10`}></div>
					<span class="mb-3 block text-3xl">{page.icon}</span>
					<h3 class="mb-1 font-bold text-white group-hover:text-purple-400 transition-colors">
						{page.title}
					</h3>
					<p class="text-sm text-slate-400">{page.desc}</p>
				</a>
			))}
		</div>
	</section>

	<section class="mb-16">
		<div class="rounded-2xl border border-slate-700 bg-gradient-to-br from-slate-800 to-slate-800/50 p-8">
			<h2 class="mb-6 text-2xl font-bold text-white">Tech Stack</h2>
			<div class="grid gap-6 md:grid-cols-3">
				<div class="flex items-start gap-4">
					<div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-blue-500/20 text-2xl">
						<span class="text-blue-400">R</span>
					</div>
					<div>
						<h3 class="font-bold text-blue-400">React 19</h3>
						<p class="text-sm text-slate-400">Component library with hooks, Server Components, and JSX</p>
					</div>
				</div>
				<div class="flex items-start gap-4">
					<div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-green-500/20 text-2xl">
						<span class="text-green-400">V</span>
					</div>
					<div>
						<h3 class="font-bold text-green-400">Vue 3</h3>
						<p class="text-sm text-slate-400">Progressive framework with Composition API and SFCs</p>
					</div>
				</div>
				<div class="flex items-start gap-4">
					<div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-orange-500/20 text-2xl">
						<span class="text-orange-400">S</span>
					</div>
					<div>
						<h3 class="font-bold text-orange-400">Svelte 5</h3>
						<p class="text-sm text-slate-400">Compiler-based framework with Runes reactivity</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="mb-16">
		<h2 class="mb-6 text-2xl font-bold text-white">Features Demonstrated</h2>
		<div class="grid gap-3 sm:grid-cols-2 lg:grid-cols-3">
			{[
				'Islands Architecture',
				'Partial Hydration',
				'View Transitions',
				'Content Collections',
				'MDX Integration',
				'Server Endpoints',
				'Multi-Framework State',
				'Zero JS Default',
				'Server Islands',
				'Type-Safe Content',
				'Edge Deployment',
				'Tailwind CSS v4',
			].map((feature) => (
				<div class="flex items-center gap-2 rounded-lg border border-slate-700 bg-slate-800/50 px-4 py-3">
					<span class="text-green-400">âœ“</span>
					<span class="text-slate-300">{feature}</span>
				</div>
			))}
		</div>
	</section>

	{recentPosts.length > 0 && (
		<section>
			<div class="mb-6 flex items-center justify-between">
				<h2 class="text-2xl font-bold text-white">Recent Posts</h2>
				<a href="/blog" class="text-purple-400 hover:text-purple-300 transition-colors">View all â†’</a>
			</div>
			<div class="grid gap-4 md:grid-cols-3">
				{recentPosts.map((post) => (
					<a href={`/blog/${post.id}`} class="block rounded-xl border border-slate-700 bg-slate-800 p-5 transition-all hover:border-purple-500">
						<h3 class="mb-2 font-bold text-white">{post.data.title}</h3>
						<p class="mb-3 text-sm text-slate-400 line-clamp-2">{post.data.description}</p>
						<div class="flex flex-wrap gap-2">
							{post.data.tags.slice(0, 3).map((tag) => (
								<span class="rounded bg-slate-700 px-2 py-1 text-xs text-slate-300">{tag}</span>
							))}
						</div>
					</a>
				))}
			</div>
		</section>
	)}
</Layout>
